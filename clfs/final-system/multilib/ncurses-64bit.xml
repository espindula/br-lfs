<sect1 id="ch-system-ncurses" role="wrap">
  <?dbhtml filename="ncurses-64bit.html"?>

  <title>Ncurses-&ncurses-version; 64 Bit</title>

  <indexterm zone="ch-system-ncurses">
    <primary sortas="a-Ncurses">Ncurses</primary>
  </indexterm>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="../common/ncurses.xml"
  xpointer="xpointer(//*[@role='package'])"/>

  <sect2 role="installation">
    <title>Installation of Ncurses</title>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='p1'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='p2'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='a'])"/>

<screen os="b"><userinput>CC="gcc ${BUILD64}" CXX="g++ ${BUILD64}" \
   ./configure --prefix=/usr --libdir=/lib64 \
   --with-shared --without-debug</userinput></screen>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='c'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='d'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='e'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='f'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='g'])"/>

    <para os="m1">Prepare <filename>ncurses5-config</filename> to be wrapped by
    the multiarch wrapper and then wrap it:</para>

<screen os="m2"><userinput>mv -v /usr/bin/ncurses5-config{,-64}
ln -sv multiarch_wrapper /usr/bin/ncurses5-config</userinput></screen>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='h'])"/>

<screen os="i"><userinput>mv -v /lib64/lib{panel,menu,form,ncurses,ncurses++,curses}.a /usr/lib64</userinput></screen>

    <para os="j">Create symlinks in <filename class="directory">/usr/lib64:</filename></para>

<screen os="k"><userinput>rm -v /lib64/lib{ncurses,menu,panel,form,curses}.so
ln -svf ../../lib64/libncurses.so.5 /usr/lib64/libncurses.so
ln -svf ../../lib64/libncurses.so.5 /usr/lib64/libcurses.so
ln -svf ../../lib64/libmenu.so.5 /usr/lib64/libmenu.so
ln -svf ../../lib64/libpanel.so.5 /usr/lib64/libpanel.so
ln -svf ../../lib64/libform.so.5 /usr/lib64/libform.so</userinput></screen>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="ncurses.xml"
    xpointer="xpointer(//*[@os='l'])"/>

<screen os="m"><userinput>chmod -v 755 /lib64/lib{panel,menu,form,ncurses}.so.&ncurses-version;</userinput></screen>

  </sect2>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
