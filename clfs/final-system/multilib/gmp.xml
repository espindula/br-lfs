    xpointer="xpointer(//*[@os='p2'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="../common/gmp.xml"
    xpointer="xpointer(//*[@os='a'])"/>

<screen os="b"><userinput>CC="gcc -isystem /usr/include ${BUILD32}" CXX="g++ -isystem /usr/include ${BUILD32}" \
    LDFLAGS="-Wl,-rpath-link,/lib ${BUILD32}" ./configure --prefix=/usr \
    --host=${CLFS_TARGET32} --enable-cxx --enable-mpbsd</userinput></screen>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="../common/gmp.xml"
    xpointer="xpointer(//*[@os='c'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="../common/gmp.xml"
    xpointer="xpointer(//*[@os='d'])"/>

