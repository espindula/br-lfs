<sect1 id="ch-system-iproute2" role="wrap">
  <?dbhtml filename="iproute2.html"?>

  <title>IPRoute2-&iproute2-version;</title>

  <indexterm zone="ch-system-iproute2">
    <primary sortas="a-iproute2">IPRoute2</primary>
  </indexterm>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="../common/iproute2.xml"
  xpointer="xpointer(//*[@role='package'])"/>

  <sect2 role="installation">
    <title>Installation of IPRoute2</title>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="../common/iproute2.xml"
    xpointer="xpointer(//*[@os='s1'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="../common/iproute2.xml"
    xpointer="xpointer(//*[@os='s2'])"/>

    <para os="p1">This patch adds the ability to update the LIBDIR path:</para>

<screen os="p2"><userinput>patch -Np1 -i ../&iproute2-libdir-patch;</userinput></screen>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="../common/iproute2.xml"
    xpointer="xpointer(//*[@os='a'])"/>

<screen os="b"><userinput>make CC="gcc ${BUILD64}" LIBDIR=/usr/lib64 VARLIB=/var/lib64 SBINDIR=/sbin</userinput></screen>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="../common/iproute2.xml"
    xpointer="xpointer(//*[@os='c'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="../common/iproute2.xml"
    xpointer="xpointer(//*[@os='d'])"/>

    <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
    href="../common/iproute2.xml"
    xpointer="xpointer(//*[@os='e'])"/>

<screen os="f"><userinput>make LIBDIR=/usr/lib64 VARLIB=/var/lib64 SBINDIR=/sbin install</userinput></screen>

  </sect2>

  <xi:include xmlns:xi="http://www.w3.org/2003/XInclude"
  href="../common/iproute2.xml"
