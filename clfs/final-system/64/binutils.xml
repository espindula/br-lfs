<screen os="ca"><userinput>CC="gcc -Wl,-rpath-link,/lib -isystem /usr/include" \
     ../binutils-&binutils-version;/configure --prefix=/usr \
    --libdir=/usr/lib --enable-shared \
    --disable-multilib --enable-64-bit-bfd</userinput></screen>

