      <varlistentry id="libpwl">
        <term><filename class="libraryfile">libpwl</filename></term>
        <listitem>
          <para>La bibliothèque Parma Watchdog Library</para>
          <indexterm zone="ch-system-ppl libpwl">
            <primary sortas="b-libpwl">libpwl</primary>
          </indexterm>
        </listitem>
      </varlistentry>

    </variablelist>

  </sect2>

