<sect1 id="ch-system-bc" role="wrap">
  <?dbhtml filename="bc.html"?>

  <title>Bc-&bc-version;</title>

  <indexterm zone="ch-system-bc">
    <primary sortas="a-Bc">Bc</primary>
  </indexterm>

  <sect2 role="package">
    <title/>

    <para>Le paquet Bc contient un langage de traitement des nombres à la
    précision de votre choix.</para>

  </sect2>

  <sect2 role="installation">
    <title>Installation de Bc</title>

    <para os="a">Préparez la compilation de Bc&nbsp;:</para>

<screen os="b"><userinput>./configure --prefix=/usr --with-readline \
    --mandir=/usr/share/man --infodir=/usr/share/info</userinput></screen>

    <para os="c">Compilez le paquet&nbsp;:</para>

<screen os="d"><userinput>make</userinput></screen>

    <para os="e">Pour tester les résultats, lancez&nbsp;:</para>

<screen os="e2"><userinput remap="test">echo "quit" | ./bc/bc -l Test/checklib.b</userinput></screen>

    <para os="f">Installez le paquet&nbsp;:</para>

<screen os="g"><userinput>make install</userinput></screen>

  </sect2>

  <sect2 id="contents-bc" role="content">
    <title>Contenu de Bc</title>

    <segmentedlist>
      <segtitle>Programmes installés</segtitle>

      <seglistitem>
         <seg>bc, dc</seg>
      </seglistitem>
    </segmentedlist>

    <variablelist>
      <bridgehead renderas="sect3">Descriptions courtes</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>

      <varlistentry id="bc">
        <term><command>bc</command></term>
        <listitem>
          <para>est une calculatrice en ligne de commandes</para>
          <indexterm zone="ch-system-bc bc">
            <primary sortas="b-bc">bc</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="dc">
        <term><command>dc</command></term>
          <listitem>
          <para>est une calculatrice en ligne de commande en polonais inversé 
          (reverse-polish)</para>
          <indexterm zone="ch-system-bc dc">
            <primary sortas="b-dc">dc</primary>
          </indexterm>
        </listitem>
      </varlistentry>

    </variablelist>

  </sect2>

</sect1>
