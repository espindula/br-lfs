        <listitem>
          <para>Transforme des fichiers roff dans d'autres formats</para>
          <indexterm zone="ch-system-groff roff2x">
            <primary sortas="b-roff2x">roff2x</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="soelim">
        <term><command>soelim</command></term>
