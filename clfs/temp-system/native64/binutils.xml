<screen os="j"><userinput>CC="gcc ${BUILD64}" \
    ../binutils-&binutils-version;/configure --prefix=/tools \
    --libdir=/tools/lib64 --with-lib-path=/tools/lib \
    --disable-nls --enable-shared --enable-64-bit-bfd</userinput></screen>

