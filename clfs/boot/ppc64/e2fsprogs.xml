<screen os="aa"><userinput>CC="${CC} ${BUILD64}" ../configure --prefix=/tools \
    --enable-elf-shlibs --disable-evms --with-cc="${CC} ${BUILD64}" \
    --with-linker=${LD} --build=${CLFS_HOST} --host=${CLFS_TARGET} \
    --cache-file=config.cache</userinput></screen>

