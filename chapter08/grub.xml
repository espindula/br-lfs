        <term><command>grub-mkstandalone</command></term>
        <listitem>
          <para>Gera uma imagem independente</para>
          <indexterm zone="ch-system-grub grub-mkstandalone">
            <primary sortas="b-grub-mkstandalone">grub-mkstandalone</primary>
          </indexterm>
        </listitem>
      </varlistentry>

