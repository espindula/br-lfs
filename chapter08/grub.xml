        <term><command>grub-mkimage</command></term>
        <listitem>
          <para>Faz uma imagem inicializável do GRUB</para>
          <indexterm zone="ch-system-grub grub-mkimage">
            <primary sortas="b-grub-mkimage">grub-mkimage</primary>
          </indexterm>
        </listitem>
