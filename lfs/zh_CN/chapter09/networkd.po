#. type: Content of: <sect1><title>
#: lfs-en/chapter09/networkd.xml:11
msgid "General Network Configuration"
msgstr ""

#. type: Content of: <sect1><sect2><indexterm><primary>
#: lfs-en/chapter09/networkd.xml:14 lfs-en/chapter09/networkd.xml:261
msgid "network"
msgstr ""

#. type: Content of: <sect1><sect2><indexterm><secondary>
#: lfs-en/chapter09/networkd.xml:15 lfs-en/chapter09/networkd.xml:230
msgid "configuring"
msgstr ""

#. type: Content of: <sect1><para>
