#: lfs-en/chapter08/eudev.xml:41
msgid "Installation of Eudev"
msgstr "安装 Eudev"

#. type: Content of: <sect1><sect2><para>
#: lfs-en/chapter08/eudev.xml:43
msgid "First fix the location of udev rules in the .pc file:"
msgstr ""

#. type: Content of: <sect1><sect2><screen>
#: lfs-en/chapter08/eudev.xml:45
#, fuzzy, no-wrap
#| msgid ""
#| "<userinput remap=\"test\">mkdir -pv /lib/udev/rules.d\n"
#| "mkdir -pv /etc/udev/rules.d</userinput>"
msgid "<userinput remap=\"pre\">sed -i '/udevdir/a udev_dir=${udevdir}' src/udev/udev.pc.in</userinput>"
msgstr ""
"<userinput remap=\"test\">mkdir -pv /lib/udev/rules.d\n"
"mkdir -pv /etc/udev/rules.d</userinput>"

#. type: Content of: <sect1><sect2><para>
#: lfs-en/chapter08/eudev.xml:47
msgid "Prepare Eudev for compilation:"
msgstr "准备编译 Eudev："

#. type: Content of: <sect1><sect2><screen>
#: lfs-en/chapter08/eudev.xml:49
