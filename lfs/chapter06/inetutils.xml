        <seg>ftp, hostname, ping, ping6, rcp, rlogin, rsh, talk, telnet,
        tftp</seg>
      </seglistitem>
    </segmentedlist>

    <variablelist>
      <bridgehead renderas="sect3">Descriptions courtes</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>

      <varlistentry id="ftp">
        <term><command>ftp</command></term>
