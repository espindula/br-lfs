        <seg>grub, grub-install, grub-md5-crypt, grub-set-default,
        grub-terminfo et mbchk</seg>
      </seglistitem>
    </segmentedlist>

    <variablelist>
      <bridgehead renderas="sect3">Descriptions courtes</bridgehead>
      <?dbfo list-presentation="list"?>
