#: lfs-en/chapter11/reboot.xml:72
msgid "/root/.bash_profile"
msgstr "/root/.bash_profile"

#. type: Content of: <sect1><itemizedlist><listitem><itemizedlist><listitem><para>
#: lfs-en/chapter11/reboot.xml:73
msgid "/root/.bashrc"
msgstr "/root/.bashrc"

