#. type: Content of: <sect1><sect2><para>
#: lfs-en/chapter08/systemd.xml:44
msgid ""
"Remove several inappropriate uses of the <literal>pure</literal> attribute "
"that cause runtime issues when the package is built with gcc-13 or later:"
msgstr ""
"Remova vários usos inapropriados do atributo <literal>pure</literal> que "
"causam problemas em tempo de execução quando o pacote for construído com o "
"GCC-13 ou posterior:"

#. type: Content of: <sect1><sect2><screen>
#: lfs-en/chapter08/systemd.xml:49
#, no-wrap
msgid ""
"<userinput remap='pre'>sed '/bus_message_type_from_string/s/_pure_//' \\\n"
"    -i src/libsystemd/sd-bus/bus-internal.h    &amp;&amp;\n"
"sed '/devt_hash_func/s/_pure_//'               \\\n"
"    -i src/basic/hash-funcs.h                  &amp;&amp;\n"
"sed '/job_get_timeout/s/_pure_//'              \\\n"
"    -i src/core/job.h</userinput>"
msgstr ""
"<userinput remap='pre'>sed '/bus_message_type_from_string/s/_pure_//' \\\n"
"    -i src/libsystemd/sd-bus/bus-internal.h    &amp;&amp;\n"
"sed '/devt_hash_func/s/_pure_//'               \\\n"
"    -i src/basic/hash-funcs.h                  &amp;&amp;\n"
"sed '/job_get_timeout/s/_pure_//'              \\\n"
"    -i src/core/job.h</userinput>"

#. type: Content of: <sect1><sect2><para>
#: lfs-en/chapter08/systemd.xml:56
msgid ""
"Remove two unneeded groups, <systemitem class=\"groupname\">render</"
"systemitem> and <systemitem class=\"groupname\">sgx</systemitem>, from the "
"default udev rules:"
msgstr ""
"Remova dois grupos desnecessários, <systemitem class=\"groupname\">render</"
"systemitem> e <systemitem class=\"groupname\">sgx</systemitem>, das regras "
"padrão do Udev:"

#. type: Content of: <sect1><sect2><screen>
#: lfs-en/chapter08/systemd.xml:61
#, no-wrap
msgid ""
"<userinput remap=\"pre\">sed -i -e 's/GROUP=\"render\"/GROUP=\"video\"/' \\\n"
"       -e 's/GROUP=\"sgx\", //' rules.d/50-udev-default.rules.in</userinput>"
msgstr ""
"<userinput remap=\"pre\">sed -i -e 's/GROUP=\"render\"/GROUP=\"video\"/' \\\n"
"       -e 's/GROUP=\"sgx\", //' rules.d/50-udev-default.rules.in</userinput>"

#. type: Content of: <sect1><sect2><para>
#: lfs-en/chapter08/systemd.xml:64
msgid "Prepare systemd for compilation:"
msgstr "Prepare systemd para compilação:"

#. type: Content of: <sect1><sect2><screen>
#: lfs-en/chapter08/systemd.xml:66
#, no-wrap
msgid ""
"<userinput remap=\"configure\">mkdir -p build\n"
"cd       build\n"
"\n"
"meson setup \\\n"
"      --prefix=/usr                 \\\n"
"      --buildtype=release           \\\n"
"      -Ddefault-dnssec=no           \\\n"
"      -Dfirstboot=false             \\\n"
"      -Dinstall-tests=false         \\\n"
"      -Dldconfig=false              \\\n"
"      -Dsysusers=false              \\\n"
"      -Drpmmacrosdir=no             \\\n"
"      -Dhomed=false                 \\\n"
"      -Duserdb=false                \\\n"
"      -Dman=false                   \\\n"
"      -Dmode=release                \\\n"
"      -Dpamconfdir=no               \\\n"
"      -Ddev-kvm-mode=0660           \\\n"
"      -Ddocdir=/usr/share/doc/systemd-&systemd-version; \\\n"
"      ..</userinput>"
msgstr ""
"<userinput remap=\"configure\">mkdir -p build\n"
"cd       build\n"
"\n"
"meson setup \\\n"
"      --prefix=/usr                 \\\n"
"      --buildtype=release           \\\n"
"      -Ddefault-dnssec=no           \\\n"
"      -Dfirstboot=false             \\\n"
"      -Dinstall-tests=false         \\\n"
"      -Dldconfig=false              \\\n"
"      -Dsysusers=false              \\\n"
"      -Drpmmacrosdir=no             \\\n"
"      -Dhomed=false                 \\\n"
