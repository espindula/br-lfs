#. type: Content of: <sect1><sect2><para>
#: lfs-en/chapter08/systemd.xml:43
msgid ""
"Remove two unneeded groups, <systemitem class=\"groupname\">render</"
"systemitem> and <systemitem class=\"groupname\">sgx</systemitem>, from the "
"default udev rules:"
msgstr ""
"Remova dois grupos desnecessários, <systemitem class=\"groupname\">render</"
"systemitem> e <systemitem class=\"groupname\">sgx</systemitem>, das regras "
"padrão do \"udev\":"

#. type: Content of: <sect1><sect2><screen>
#: lfs-en/chapter08/systemd.xml:48
#, no-wrap
msgid ""
"<userinput remap=\"pre\">sed -i -e 's/GROUP=\"render\"/GROUP=\"video\"/' \\\n"
"       -e 's/GROUP=\"sgx\", //' rules.d/50-udev-default.rules.in</userinput>"
msgstr ""
