#, no-wrap
msgid ""
"\tONBOOT=yes\n"
"\tIP=64.30.195.78\n"
"\tNETMASK=255.255.255.0\n"
"\tBROADCAST=64.30.195.255\n"
msgstr ""

#. type: Plain text
#: origin/ethernet-bonding.txt:181
#, no-wrap
msgid "\tifconfig.bond0 would look like this\n"
