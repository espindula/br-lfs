#. type: Plain text
#: origin/syslog-ng.txt:151
msgid "Make syslog-ng start on bootup"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:153
msgid "Create the /etc/rc.d/init.d/syslog-ng by running:"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:157
msgid ""
"cat > /etc/rc.d/init.d/syslog-ng << \"EOF\" #!/bin/sh # Begin "
"$rc_base/init.d/syslog-ng - Syslog-ng loader"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:160
msgid ""
"# Based on sysklogd script from LFS-3.1 and earlier.  # Rewritten by Gerard "
"Beekmans - gerard@linuxfromscratch.org"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:163
msgid "source /etc/sysconfig/rc source $rc_functions"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:173
#, no-wrap
msgid ""
"case \"$1\" in\n"
"\tstart)\n"
"\t\techo \"Starting System Log...\"\n"
"\t\tloadproc syslog-ng\n"
"\t\t;;\n"
"\tstop)\n"
"\t\techo \"Stopping System Log...\"\n"
"\t\tkillproc syslog-ng\n"
"\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:179
#, no-wrap
msgid ""
"\trestart)\n"
"\t\t$0 stop\n"
"\t\tsleep 1\n"
"\t\t$0 start\n"
"\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:183
#, no-wrap
msgid ""
"\tstatus)\n"
"\t\tstatusproc syslog-ng\n"
"\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:189
#, no-wrap
msgid ""
"\t*)\n"
"\t\techo \"Usage: $0 {start|stop|restart|status}\"\n"
"\t\texit 1\n"
"\t\t;;\n"
"esac\n"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:192
msgid "# End $rc_base/init.d/syslog-ng EOF"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:196
msgid "Make the script executable and create the appropriate symlinks by running:"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:205
msgid ""
"chmod 755 /etc/rc.d/init.d/syslog-ng && ln -s /etc/rc.d/init.d/syslog-ng "
"/etc/rc.d/rc0.d/K40syslog-ng && ln -s /etc/rc.d/init.d/syslog-ng "
"/etc/rc.d/rc1.d/K80syslog-ng && ln -s /etc/rc.d/init.d/syslog-ng "
"/etc/rc.d/rc2.d/S10syslog-ng && ln -s /etc/rc.d/init.d/syslog-ng "
"/etc/rc.d/rc3.d/S10syslog-ng && ln -s /etc/rc.d/init.d/syslog-ng "
"/etc/rc.d/rc4.d/S10syslog-ng && ln -s /etc/rc.d/init.d/syslog-ng "
"/etc/rc.d/rc5.d/S10syslog-ng && ln -s /etc/rc.d/init.d/syslog-ng "
"/etc/rc.d/rc6.d/K40syslog-ng"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:208
msgid "Last step"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:210
msgid "You will need to prevent sysklogd from starting"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:218
msgid ""
"rm /etc/rc.d/rc0.d/K40sysklogd && rm /etc/rc.d/rc1.d/K80sysklogd && rm "
"/etc/rc.d/rc2.d/S10sysklogd && rm /etc/rc.d/rc3.d/S10sysklogd && rm "
"/etc/rc.d/rc4.d/S10sysklogd && rm /etc/rc.d/rc5.d/S10sysklogd && rm "
"/etc/rc.d/rc6.d/K40sysklogd"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:222
msgid "Extra: Logging of Iptables Information"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:225
msgid ""
"Add the following information to log all iptables information into it's own "
"file called /var/log/iptables.log"
msgstr ""

#. type: Plain text
#: origin/syslog-ng.txt:229
msgid ""
"destination iptables { file(\"/var/log/iptables.log\"); }; filter f_iptables "
"{ match(\"IN=\"); }; log { source(src); filter(f_iptables); "
"destination(iptables); };"
msgstr ""

