#. type: Plain text
#: origin/lfss390.txt:169
#, no-wrap
msgid ""
"if [ $TERM = \"dumb\" ]; then\n"
"    alias ls='ls --color=never'\n"
"else\n"
"    alias ls='ls --color=auto'\n"
"fi\n"
msgstr ""

