"\tscanlogd-2.2\n"
"\t\tmake linux\n"
"\t\tmv scanlogd /usr/sbin\n"
"\t\tmv scanlogd.8 /usr/share/man/man8\n"
"\t\tuseradd -g daemon scanlogd\n"
"\t\techo \"daemon.alert -/var/log/alert.log\" >> /etc/syslog.conf\n"
msgstr ""

#. type: Plain text
#: origin/portscan.txt:69
#, no-wrap
msgid "\t\tcreating Startscript :\n"
msgstr ""

#. type: Plain text
#: origin/portscan.txt:72
msgid "cat > /etc/rc.d/init.d/scanlogd << \"EOF\" #!/bin/bash"
msgstr ""

#. type: Plain text
#: origin/portscan.txt:74
msgid "source $rc_functions"
msgstr ""

#. type: Plain text
#: origin/portscan.txt:90
#, no-wrap
msgid ""
"case \"$1\" in\n"
"\tstart)\n"
"\t\techo \"Starting PortScan Logging Facility...\"\n"
"\t\tloadproc scanlogd\n"
"\t\t;;\n"
"\tstop)\n"
"\t\techo \"Stopping Portscan Logging...\"\n"
"\t\tkillproc scanlogd\n"
"\t\t;;\n"
"\t*)\n"
"\t\techo \"Usage: $0 {start|stop}\"\n"
"\t\texit 1\n"
"\t\t;;\n"
"esac\n"
"EOF\n"
msgstr ""

