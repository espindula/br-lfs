#. type: Plain text
#: origin/courier-extras.txt:316
#, no-wrap
msgid "\t# SpamAssassin\n"
msgstr ""

#. type: Plain text
#: origin/courier-extras.txt:319
#, no-wrap
msgid ""
"\tsource /etc/sysconfig/rc\n"
"\tsource $rc_functions\n"
msgstr ""

#. type: Plain text
#: origin/courier-extras.txt:324
#, no-wrap
msgid ""
"\tif [ -f /etc/sysconfig/spamd ]\n"
"\t\tthen\n"
"\t\t\tsource /etc/sysconfig/spamd\n"
"\tfi\n"
msgstr ""

#. type: Plain text
#: origin/courier-extras.txt:331
#, no-wrap
msgid ""
"\tcase \"$1\" in\n"
"\t\tstart)\n"
"\t\t\techo \"Starting Spam Assassin Service...\"\n"
"\t\t\tloadproc spamd $OPTIONS\n"
"\t\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/courier-extras.txt:336
#, no-wrap
msgid ""
"\t\tstop)\n"
"\t\t\techo \"Stopping Spam Assassin Service...\"\n"
"\t\t\tkillproc spamd\n"
"\t\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/courier-extras.txt:342
#, no-wrap
msgid ""
"\t\trestart)\n"
"\t\t\t$0 stop\n"
"\t\t\tsleep 1\n"
"\t\t\t$0 start\n"
"\t\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/courier-extras.txt:346
#, no-wrap
msgid ""
"\t\tstatus)\n"
"\t\t\tstatusproc spamd\n"
