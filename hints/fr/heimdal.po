msgid ""
"Stripping the Binaries:\n"
"-----------------------\n"
msgstr ""

#. type: Plain text
#: origin/heimdal.txt:361
msgid ""
"Heimdal doesn't strip the binaries during the build phase and uses -g as a "
"build option. So, the binaries are quite large. If desired, strip the "
"unnecessary symbols by issuing the following commands:"
msgstr ""

#. type: Plain text
#: origin/heimdal.txt:367
#, no-wrap
msgid ""
"DIR=`pwd`\n"
"cd /usr/sbin\n"
"strip --strip-all ipropd-slave ipropd-master dump_log truncate_log \\\n"
"    replay_log hprop ktutil kstash kdc hpropd kpasswdd kadmind kadmin \\\n"
"    ftpd rshd push popper telnetd kxd kfd\n"
msgstr ""

#. type: Plain text
#: origin/heimdal.txt:372 origin/heimdal.txt:875
#, no-wrap
msgid ""
"cd /usr/bin\n"
"strip --strip-all kinit klist kdestroy kgetcred string2key kpasswd afslog "
"\\\n"
"    pagsh ftp login otp otpprint rsh rcp su xnlock telnet kx kf mk_cmds \\\n"
"    verify_krb5_conf\n"
msgstr ""

#. type: Plain text
#: origin/heimdal.txt:380 origin/heimdal.txt:883
#, no-wrap
msgid ""
"cd /usr/lib\n"
"strip --strip-debug libroken.so.16.0.3 libroken.a libss.so.0.1.4 libss.a "
"\\\n"
"    libsl.so.0.1.2 libsl.a libeditline.a libasn1.so.6.0.2 libasn1.a \\\n"
"    libkrb5.so.17.3.0 libkrb5.a libkafs.so.0.4.0 libkafs.a libhdb.so.7.0.7 "
"\\\n"
"    libhdb.a libkadm5srv.so.7.0.6 libkadm5srv.a libkadm5clnt.so.4.2.4 \\\n"
"    libkadm5clnt.a libotp.so.0.1.4 libotp.a libgssapi.so.1.4.0 libgssapi.a\n"
"cd $DIR\n"
msgstr ""

