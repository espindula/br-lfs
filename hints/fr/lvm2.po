#. type: Plain text
#: origin/lvm2.txt:156
#, no-wrap
msgid "   For those using BSD-style bootscript, here's my setup.\n"
msgstr ""

#. type: Plain text
#: origin/lvm2.txt:158
#, no-wrap
msgid "   activate LVM after remounting root rw \n"
msgstr ""

#. type: Plain text
#: origin/lvm2.txt:160
#, no-wrap
msgid "   File: rc.sysinit\n"
msgstr ""

#. type: Plain text
#: origin/lvm2.txt:164
#, no-wrap
msgid ""
"   \"/bin/mount -n -v -o remount,rw /\"\n"
"   \"vgchange -a y\"\n"
"   .... mount your LV after here ....\n"
msgstr ""

#. type: Plain text
#: origin/lvm2.txt:166
#, no-wrap
msgid "   deactivate LVM before remounting root ro\n"
msgstr ""

#. type: Plain text
#: origin/lvm2.txt:168
#, no-wrap
msgid "   File: rc.0\n"
msgstr ""

#. type: Plain text
#: origin/lvm2.txt:172
#, no-wrap
msgid ""
"   \"vgchange -a n\"\n"
"   .... unmount all LV .....\n"
"   \"/bin/mount -n -o remount,ro /\"\n"
msgstr ""

