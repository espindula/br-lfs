#: origin/pfs.txt:183
msgid ""
"# Prints file to printer $DEVICE connected at /dev/$LP, # using paper size "
"$PAPER.  # Usage: lpr <ps or pdf file> ( or cat <ps or pdf file> | lpr )"
msgstr " "

#. type: Plain text
#: origin/pfs.txt:185
msgid "# Uli Fahrenberg, early 2003. This file is in the public domain."
msgstr " "

#. type: Plain text
#: origin/pfs.txt:190
#, no-wrap
msgid ""
"if [ -e $LOCKFILE ] ; then\n"
"\techo \"Error: printer is locked  ($LOCKFILE exists)\"\n"
"\texit 1\n"
"fi\n"
msgstr " "

