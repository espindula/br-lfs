#. type: Plain text
#: origin/mail.txt:879
msgid "Optional program pop-before smtp"
msgstr ""

#. type: Plain text
#: origin/mail.txt:884
#, no-wrap
msgid ""
"\tThis program allow your remote users to send email from a remote\n"
"\tlocation. It allows this by capturing their current IP after they\n"
"\thave done a POP or IMAP transfer from courier. The IP only stays\n"
"\tactive for a time that you have setup.\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:886
#, no-wrap
msgid "\tHere is the basic compile and configuration for pop-before-smtp\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:895
#, no-wrap
msgid ""
"\tmake -s\n"
"\tmake -s install\n"
"\tcd /etc/postfix\n"
"\tcp pop-before-smtp.conf pop-before-smtp.conf.org\n"
"\tsed -e 's|grace = 2h|grace = 30m|g' \\ \n"
"\t    -e 's|log_file = /var/log/mail.log|log_file = /var/log/mail.log|g' \\ "
"# Change to your log file \n"
"\t    pop-before-smtp.conf.org > pop-before-smtp.conf\n"
"\trm -rf pop-before-smtp.conf.org\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:897
#, no-wrap
msgid "\tNow you will need to configure postfix to use the file\t\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:900
#, no-wrap
msgid ""
"\tYou will need to edit your main.cf file and add the following line\n"
"\tsmtpd_recipient_restrictions = permit_mynetworks, check_client_access "
"hash:/etc/postfix/pop-before-smtp, check_relay_domains\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:905
#, no-wrap
msgid ""
"\t#!/bin/bash\n"
"\t# Begin $rc_base/init.d/pop-before-smtp\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:921
#, no-wrap
msgid ""
"\tcase \"$1\" in\n"
"\t\tstart)\n"
"\t\t\techo \"Clearing POP Before SMTP File...\"\n"
"\t\t\trm -rf /etc/postfix/pop-before-smtp\n"
"\t\t\tevaluate_retval\n"
"\t\t\techo \"Starting POP Before SMTP...\"\n"
"\t\t\t/usr/bin/pop-before-smtp &\n"
"\t\t\tevaluate_retval\n"
"\t\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:926
#, no-wrap
msgid ""
"\t\tstop)\n"
"\t\t\techo \"Stopping Pop Before SMTP...\"\n"
"\t\t\tkillproc /usr/bin/pop-before-smtp\n"
"\t\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:932
#, no-wrap
msgid ""
"\t\trestart)\n"
"\t\t\t$0 stop\n"
"\t\t\tsleep 1\n"
"\t\t\t$0 start\n"
"\t\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:936
#, no-wrap
msgid ""
"\t\tstatus)\n"
"\t\t\tstatusproc\n"
"\t\t\t;;\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:942
#, no-wrap
msgid ""
"\t\t*)\n"
"\t\t\techo \"Usage: $0 {start|stop|restart|status}\"\n"
"\t\t\texit 1\n"
"\t\t\t;;\n"
"\tesac\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:944
#, no-wrap
msgid "\t# End $rc_base/init.d/pop-before-smtp\n"
msgstr ""

#. type: Plain text
#: origin/mail.txt:949
#, no-wrap
msgid ""
