#. type: Plain text
#: origin/ulogd.txt:38
#, no-wrap
msgid ""
"Configuring\n"
"-----------\n"
msgstr ""

#. type: Plain text
#: origin/ulogd.txt:41
msgid "CD into the directory newly created by the above tar command and do a"
msgstr ""

#. type: Plain text
#: origin/ulogd.txt:43
#, no-wrap
msgid "        ./configure --prefix=/usr --sysconfdir=/etc\n"
msgstr ""

#. type: Plain text
#: origin/ulogd.txt:48
