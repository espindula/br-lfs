msgstr ""

#. type: Content of: <dl><dl><dd><div><p>
#: complete.html:892
msgid "sk ~/tmp $ ######## that worked ########"
msgstr ""

#. type: Content of: <dl><dl><dd><div><p>
#: complete.html:893 complete.html:902
msgid "sk ~/tmp $"
msgstr ""

#. type: Content of: <dl><dl><dd><div><p>
#: complete.html:895
