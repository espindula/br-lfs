        <term><command>hostname</command></term>
        <listitem>
          <para>Reports or sets the name of the host</para>
          <indexterm zone="ch-system-coreutils hostname">
            <primary sortas="b-hostname">hostname</primary>
          </indexterm>
        </listitem>
      </varlistentry>

