        <term><command>fold</command></term>
        <listitem>
          <para>Wraps the lines in the given files</para>
          <indexterm zone="ch-system-coreutils fold">
            <primary sortas="b-fold">fold</primary>
          </indexterm>
        </listitem>
      </varlistentry>

