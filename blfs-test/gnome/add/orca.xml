    <xref linkend="dbus-python"/>,
    <xref linkend="gtk3"/>,
    <!-- <xref linkend="py2cairo"/>, -->
    <xref linkend="pygobject3"/>,
    <xref linkend="pyxdg"/></para>
    
    <bridgehead renderas="sect4">Facultatives</bridgehead>
    <para role="optional"><ulink
