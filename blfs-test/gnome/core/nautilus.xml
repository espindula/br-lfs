               <envar>$GNOME_PREFIX</envar> 
               /{include/nautilus/libnautilus-extension,
               lib/nautilus,share/{doc/nautilus-&nautilus-version;,
               gtk-doc/html/libnautilus-extension,nautilus/{icons/hicolor/{16x16/emblems,
               24x24/emblems,48x48/emblems},patterns,ui},pixmaps/nautilus}}
            </seg>
         </seglistitem>
      </segmentedlist>
      <variablelist>
      
