         <xref linkend="dbus"/>, <xref linkend="gtk3"/>
         , <xref linkend="intltool"/>, <xref linkend="libgcrypt"/>
         , <xref linkend="libtasn1"/>et <xref linkend="p11-kit"/>
      </para> 
      
      <bridgehead renderas="sect4"> Facultatives </bridgehead>
      
      <para role="optional">
         <xref linkend="gtk-doc"/>et <xref linkend="linux-pam"/>
