         <xref linkend="atk"/>, <xref linkend="cairo"/>
         , <xref linkend="cogl"/>, <xref linkend="gdk-pixbuf"/>
         , <xref linkend="json-glib"/>, <xref linkend="mesalib"/>
         , et <xref linkend="pango"/>
      </para> 
      
