      <variablelist>
      
      <bridgehead renderas="sect3"> Descriptions courtes </bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>
      
      <varlistentry id="svn">
         <term><command>svn</command> </term>
         <listitem>
            <para>
               est un programme de client en ligne de commande utilisé pour accéder à des dépôts
               <application></application> . 
            </para> 
            <indexterm zone="subversion svn">
               <primary sortas="b-svn"> svn </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="svnadmin">
         <term><command>svnadmin</command> </term>
         <listitem>
            <para>
               est un outil pour la création, la modificatio ou la réparation d'un dépôt
               <application></application> . 
            </para> 
            <indexterm zone="subversion svnadmin">
               <primary sortas="b-svnadmin"> svnadmin </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="svndumpfilter">
         <term><command>svndumpfilter</command> </term>
         <listitem>
            <para>
               est un programme pour le filtrage des streamings de format dumpfile d'un dépôt
               <application></application> . 
            </para> 
            <indexterm zone="subversion svndumpfilter">
               <primary sortas="b-svndumpfilter"> svndumpfilter </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="svnlook">
         <term><command>svnlook</command> </term>
         <listitem>
            <para>
               est un outil pour examiner un dépôt <application></application> . 
            </para> 
            <indexterm zone="subversion svnlook">
               <primary sortas="b-svnlook"> svnlook </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="svnrdump">
         <term><command>svnrdump</command> </term>
         <listitem>
            <para>
               est un outil pour écrire ou charger un dépôt <application></application> . 
            </para> 
            <indexterm zone="subversion svnrdump">
               <primary sortas="b-svnrdump"> svnrdump </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="svnserve">
         <term><command>svnserve</command> </term>
         <listitem>
            <para>
               est un programme de serveur autonome personnalisable capable de se lancer en tant
               qu'un processus démon ou s'il est invoqué par SSH. 
            </para> 
            <indexterm zone="subversion svnserve">
               <primary sortas="b-svnserve"> svnserve </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="svnsync">
         <term><command>svnsync</command> </term>
         <listitem>
            <para>
               est un outil de synchronisation de dépôts <application></application> . 
            </para> 
            <indexterm zone="subversion svnsync">
               <primary sortas="b-svnsync"> svnsync </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="svnversion">
         <term><command>svnversion</command> </term>
         <listitem>
            <para>
               sont les bibliothèques de support utilisées par les programmes
               <application></application> . 
            </para> 
            <indexterm zone="subversion svnversion">
               <primary sortas="b-svnversion"> svnversion </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="libsvn_star">
         <term><filename class="libraryfile"></filename> </term>
         <listitem>
            <para>
               , utilisé pour authentifier les utilisateurs sur un dépôt <application></application>
               à travers Internet ou un réseau intranet. 
            </para> 
            <indexterm zone="subversion libsvn_star">
               <primary sortas="c-libsvn_star"> libsvn_*.so </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="mod_authz_svn">
         <term><filename class="libraryfile"></filename> </term>
         <listitem>
            <para>
               est un module plug-in pour le serveur HTTP <application></application> , utilisé pour
               rendre un dépôt <application></application> disponible pour autrui à travers Internet
               or un réseau intranet. 
            </para> 
            <indexterm zone="subversion mod_authz_svn">
               <primary sortas="c-mod_authz_svn"> mod_authz_svn.so </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      
      <varlistentry id="mod_dav_svn">
         <term><filename class="libraryfile"></filename> </term>
         <listitem>
            <para>
               <!-- is a plug-in module for the= --> \n --non_traduit-- <application></application>
               <!-- HTTP server, used to make a= --> \n --non_traduit-- <application></application>
               <!-- repository available to others over the Internet or an intranet.= --> \n
               --non_traduit-- 
            </para> 
            <indexterm zone="subversion mod_dav_svn">
               <primary sortas="c-mod_authz_svn"> mod_dav_svn.so </primary>
            </indexterm>
         </listitem>
      </varlistentry>
      </variablelist>
      
