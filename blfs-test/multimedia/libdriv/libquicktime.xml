         <xref linkend="alsa"/>, <xref linkend="faac"/>
         , <xref linkend="faad2"/>, <xref linkend="ffmpeg"/>
         , <xref linkend="gtk2"/>, <xref linkend="lame"/>
         , <xref linkend="libdv"/>, <xref linkend="libjpeg"/>
         , <xref linkend="libpng"/>, <xref linkend="libvorbis"/>
         , <ulink url="http://www.diracvideo.org"> Schroedinger </ulink>
         , <ulink url="http://developers.videolan.org/x264.html"> x264 </ulink>
         et <xref linkend="x-window-system"/>
      </para> 
      
