         <xref linkend="libproxy"/>, <ulink url="http://www.live555.com/"> Live555 </ulink>
         , <ulink url="http://sourceforge.net/projects/libdc1394/"> DC1394 </ulink>
         , <xref linkend="libdv"/>, <xref linkend="libdvdread"/>
         , <xref linkend="libdvdnav"/>, <ulink
         url="http://www.videolan.org/developers/libbluray.html"> libbluray </ulink>
         , <ulink url="http://opencv.willowgarage.com/wiki/"> OpenCV </ulink>
         , <xref linkend="samba3"/>, <xref linkend="gvfs"/>
