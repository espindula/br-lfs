      <sect3>
         <title></title> 
         
         <para>
            <!-- For= --> \n --non_traduit-- <application></application> <!-- to work, at least
            minimal configuration file must be present. Such file is not installed with= --> \n
            --non_traduit-- <command><!-- make install= --> \n --non_traduit--</command> <!-- .
            Issue following command as the= --> \n --non_traduit-- <systemitem class="username">
            <!-- root= --> \n --non_traduit-- </systemitem><!-- user to create minimal= --> \n
            --non_traduit-- <filename>NetworkManager.conf</filename> <!-- file:= --> \n
            --non_traduit--  
         </para> 
         
<screen role="root">
<userinput>cat &gt;&gt; /etc/NetworkManager/NetworkManager.conf &lt;&lt; "EOF"
<literal>
</literal>
EOF</userinput></screen>
         
         <para>
            <!-- See= --> \n --non_traduit-- <command><!-- man 5 NetworkManager.conf= --> \n
            --non_traduit--</command> <!-- for any additional options.= --> \n --non_traduit-- 
         </para> 
         
      </sect3>
      
      <sect3 id="NetworkManager-init">
         <title></title> 
         
         <para>
            <!-- To automatically start the= --> \n --non_traduit-- <command><!-- NetworkManager=
            --> \n --non_traduit--</command> <!-- daemon when the system is rebooted, install the=
            --> \n --non_traduit-- <filename>/etc/rc.d/init.d/networkmanager</filename> <!--
            bootscript from the= --> \n --non_traduit-- <xref linkend="bootscripts"/><!-- package.=
            --> \n --non_traduit-- 
         </para> 
         <indexterm zone="NetworkManager NetworkManager-init">
            <primary sortas="f-NetworkManager"> NetworkManager </primary>
         </indexterm>
         
<screen role="root">
<userinput>make install-networkmanager</userinput></screen>
         
      </sect3>
      
