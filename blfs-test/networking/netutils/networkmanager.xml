   <sect2 role="installation">
      <title></title> 
      
      <para>
         <!-- Install= --> \n --non_traduit-- <application></application> <!-- by running the
         following commands:= --> \n --non_traduit-- 
      </para> 
      
<screen><userinput>patch -Np1 -i ../NetworkManager-&NetworkManager-version;-upstream-fix-1.patch
&amp;&amp;
patch -Np1 -i ../NetworkManager-&NetworkManager-version;-lfs-1.patch &amp;&amp;
./configure --prefix=/usr \
            --sysconfdir=/etc \
            --libexecdir=/usr/lib/NetworkManager \
            --localstatedir=/var \
            --with-systemdsystemunitdir=no \
            --with-crypto=gnutls &amp;&amp;
make</userinput></screen>
      
      <para>
         <!-- To test the results, issue:= --> \n --non_traduit-- <command><!-- make check= --> \n
         --non_traduit--</command> . 
      </para> 
      
      <para>
         <!-- Now, as the= --> \n --non_traduit-- <systemitem class="username"> <!-- root= --> \n
         --non_traduit-- </systemitem><!-- user:= --> \n --non_traduit--  
      </para> 
      
<screen role="root">
<userinput>make install</userinput></screen>
      
   </sect2>
   
   <sect2 role="commands">
      <title></title> 
      
      <para>
      <parameter><!-- - -with-systemdsystemunitdir=no= --> \n --non_traduit-- </parameter>
      <!--&nbsp;: This parameter is needed to avoid= --> \n --non_traduit--
      <application></application> <!-- files being installed.= --> \n --non_traduit-- 
      </para> 
      
      <para>
      <parameter><!-- - -with-crypto=gnutls= --> \n --non_traduit-- </parameter> <!--&nbsp;: This
      parameter ensures the package uses= --> \n --non_traduit-- <application></application> <!--
      for cryptography, instead of= --> \n --non_traduit-- <application></application> . 
      </para> 
      
      <para>
         <option>
         <!-- - -with-distro=lfs= --> \n --non_traduit-- </option>
         <!--&nbsp;: This parameter is only needed if you failed to create= --> \n --non_traduit--
         <filename>/etc/lfs-release</filename> <!-- when you installed LFS.= --> \n --non_traduit-- 
      </para> 
      
   </sect2>
   
