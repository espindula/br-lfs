    <itemizedlist spacing="compact">
      <listitem>
        <para>
          Correctif requis:
          <ulink url="&patch-root;/gst-ffmpeg-&gst-ffmpeg-version;-gcc-4.7-1.patch"/>
        </para>
      </listitem>
    </itemizedlist>
    <bridgehead renderas="sect3">Dépendances de gst-ffmpeg</bridgehead>
    <bridgehead renderas="sect4">Requises</bridgehead>
    <para role="required"><xref linkend="gst-plugins-base"/> et
    <xref linkend="yasm"/></para>
    
