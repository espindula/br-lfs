#. type: Content of: <sect1><sect2><sect3><title>
#: blfs-en/networking/connect/kea.xml:357
msgid "IPv4 DHCP Server Configuration"
msgstr ""

#. type: Content of: <sect1><sect2><sect3><para>
#: blfs-en/networking/connect/kea.xml:360
msgid ""
"A sample configuration file is created in <filename>/etc/kea/kea-"
"dhcp4.conf</filename>.  Adjust the file to suit your needs or overwrite it "
"by using the following sample as the <systemitem "
"class=\"username\">root</systemitem> user:"
msgstr ""

#. type: Content of: <sect1><sect2><sect3><screen>
#: blfs-en/networking/connect/kea.xml:366
#, no-wrap
msgid ""
"<userinput>cat &gt; /etc/kea/kea-dhcp4.conf &lt;&lt; \"EOF\"\n"
"<literal>// Begin /etc/kea/kea-dhcp4.conf\n"
"{\n"
"  \"Dhcp4\": {\n"
"    // Add names of your network interfaces to listen on.\n"
"    \"interfaces-config\": {\n"
"      \"interfaces\": [ \"eth0\", \"eth2\" ]\n"
"    },\n"
"\n"
"    \"control-socket\": {\n"
"      \"socket-type\": \"unix\",\n"
"      \"socket-name\": \"/run/kea4-ctrl-socket\"\n"
"    },\n"
"\n"
"    \"lease-database\": {\n"
"      \"type\": \"memfile\",\n"
"      \"lfc-interval\": 3600\n"
"    },\n"
