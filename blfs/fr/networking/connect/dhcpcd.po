"class=\"username\">root</systemitem>&nbsp;:"

#. type: Content of: <sect1><sect2><sect3><screen>
#: blfs-en/networking/connect/dhcpcd.xml:256
#, no-wrap
msgid "<userinput>make install-dhcpcd</userinput>"
