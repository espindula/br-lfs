"suivantes&nbsp;:"

#. type: Content of: <sect1><sect2><sect3><screen>
#: blfs-en/server/mail/exim.xml:282
#, no-wrap
msgid ""
"<userinput>cat &gt;&gt; /etc/aliases &lt;&lt; \"EOF\"\n"
"<literal>postmaster: root\n"
