"<userinput>./configure --prefix=/usr        \\\n"
"            --sysconfdir=/etc    \\\n"
"            --localstatedir=/var \\\n"
"            --disable-static     \\\n"
"            --with-os-type=LFS   &amp;&amp;\n"
"make</userinput>"
msgstr ""
"<userinput>./configure --prefix=/usr        \\\n"
"            --sysconfdir=/etc    \\\n"
"            --localstatedir=/var \\\n"
"            --disable-static     \\\n"
"            --with-os-type=LFS   &amp;&amp;\n"
"make</userinput>"

#. type: Content of: <sect1><sect2><screen>
#: blfs-en/postlfs/security/polkit.xml:217
#, no-wrap
