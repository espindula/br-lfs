"            --localstatedir=/var \\\n"
"            --disable-static     \\\n"
"\t    --with-os-type=LFS   \\\n"
"            --enable-libsystemd-login=no &amp;&amp;\n"
"make</userinput>"
msgstr ""
"<userinput>./configure --prefix=/usr        \\\n"
"            --sysconfdir=/etc    \\\n"
"            --localstatedir=/var \\\n"
"            --disable-static     \\\n"
"\t    --with-os-type=LFS   \\\n"
"            --enable-libsystemd-login=no &amp;&amp;\n"
"make</userinput>"

