"<userinput>./configure --prefix=/usr        \\\n"
"            --sysconfdir=/etc    \\\n"
"            --localstatedir=/var \\\n"
"            --disable-static     \\\n"
"            --with-os-type=LFS   \\\n"
"            --disable-libsystemd-login &amp;&amp;\n"
"make</userinput>"
msgstr ""
"<userinput>./configure --prefix=/usr        \\\n"
"            --sysconfdir=/etc    \\\n"
"            --localstatedir=/var \\\n"
"            --disable-static     \\\n"
"            --with-os-type=LFS   \\\n"
"            --disable-libsystemd-login &amp;&amp;\n"
"make</userinput>"

