"iptables -A OUTPUT  -j LOG --log-prefix \"FIREWALL:OUTPUT \"\n"
"\n"
"# Enable IP Forwarding\n"
"echo 1 &gt; /proc/sys/net/ipv4/ip_forward</literal>\n"
"EOF\n"
"chmod 700 /etc/rc.d/rc.iptables</userinput>"
