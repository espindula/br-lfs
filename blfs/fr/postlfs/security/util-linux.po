"\n"
"auth      sufficient  pam_rootok.so\n"
"session   include     system-session\n"
"\n"
"# End /etc/pam.d/runuser</literal>\n"
"EOF</userinput>"
msgstr ""
"<userinput>cat &gt; /etc/pam.d/runuser &lt;&lt; \"EOF\"\n"
