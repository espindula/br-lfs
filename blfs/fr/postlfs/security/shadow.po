#. type: Content of: <sect1><sect2><para>
#: blfs-en/postlfs/security/shadow.xml:120
msgid ""
"Reinstall <application>Shadow</application> by running the following "
"commands:"
msgstr ""
"Réinstallez <application>Shadow</application> en exécutant les commandes "
"suivantes&nbsp;:"

#. <screen>
#. <userinput>patch -Np1 -i ../shadow-4.10-useradd_segfault-1.patch &amp;&amp;
#. sed -i "224s/rounds/min_rounds/" libmisc/salt.c        &amp;&amp;
#. type: Content of: <sect1><sect2><screen>
#: blfs-en/postlfs/security/shadow.xml:128
#, no-wrap
msgid ""
"<userinput>sed -i 's/groups$(EXEEXT) //' src/Makefile.in          &amp;&amp;\n"
"\n"
"find man -name Makefile.in -exec sed -i 's/groups\\.1 / /'   {} \\; &amp;&amp;\n"
"find man -name Makefile.in -exec sed -i 's/getspnam\\.3 / /' {} \\; &amp;&amp;\n"
"find man -name Makefile.in -exec sed -i 's/passwd\\.5 / /'   {} \\; &amp;&amp;\n"
"\n"
"sed -e 's@#ENCRYPT_METHOD DES@ENCRYPT_METHOD YESCRYPT@' \\\n"
"    -e 's@/var/spool/mail@/var/mail@'                   \\\n"
"    -e '/PATH=/{s@/sbin:@@;s@/bin:@@}'                  \\\n"
"    -i etc/login.defs                                   &amp;&amp;\n"
"\n"
"./configure --sysconfdir=/etc               \\\n"
"            --disable-static                \\\n"
"            --with-{b,yes}crypt             \\\n"
"            --with-group-name-max-length=32 &amp;&amp;\n"
"make</userinput>"
msgstr ""
"<userinput>sed -i 's/groups$(EXEEXT) //' src/Makefile.in          &amp;&amp;\n"
"\n"
"find man -name Makefile.in -exec sed -i 's/groups\\.1 / /'   {} \\; &amp;&amp;\n"
"find man -name Makefile.in -exec sed -i 's/getspnam\\.3 / /' {} \\; &amp;&amp;\n"
"find man -name Makefile.in -exec sed -i 's/passwd\\.5 / /'   {} \\; &amp;&amp;\n"
"\n"
"sed -e 's@#ENCRYPT_METHOD DES@ENCRYPT_METHOD YESCRYPT@' \\\n"
"    -e 's@/var/spool/mail@/var/mail@'                   \\\n"
"    -e '/PATH=/{s@/sbin:@@;s@/bin:@@}'                  \\\n"
"    -i etc/login.defs                                   &amp;&amp;\n"
"\n"
"./configure --sysconfdir=/etc               \\\n"
"            --disable-static                \\\n"
"            --with-{b,yes}crypt             \\\n"
"            --with-group-name-max-length=32 &amp;&amp;\n"
"make</userinput>"

