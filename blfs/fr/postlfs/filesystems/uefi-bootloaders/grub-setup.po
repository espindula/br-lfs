#. type: Content of: <sect1><sect2><para>
#: blfs-en/postlfs/filesystems/uefi-bootloaders/grub-setup.xml:457
msgid ""
"Generate <filename>/boot/grub/grub.cfg</filename> to configure the boot menu"
" of GRUB:"
msgstr ""
"Générez <filename>/boot/grub/grub.cfg</filename> pour configurer le menu de "
"démarrage de GRUB&nbsp;:"

#. type: Content of: <sect1><sect2><screen>
#: blfs-en/postlfs/filesystems/uefi-bootloaders/grub-setup.xml:461
#, no-wrap
msgid ""
"<userinput>cat &gt; /boot/grub/grub.cfg &lt;&lt; EOF</userinput>\n"
"<literal># Begin /boot/grub/grub.cfg\n"
"set default=0\n"
"set timeout=5\n"
"\n"
"insmod part_gpt\n"
"insmod ext2\n"
"set root=(hd0,2)\n"
"\n"
"if loadfont /boot/grub/fonts/unicode.pf2; then\n"
"  set gfxmode=auto\n"
"  insmod all_video\n"
"  terminal_output gfxterm\n"
"fi\n"
"\n"
"menuentry \"GNU/Linux, Linux 5.19.2-lfs-11.2\"  {\n"
"  linux   /boot/vmlinuz-5.19.2-lfs-11.2 root=/dev/sda2 ro\n"
"}\n"
"\n"
"menuentry \"Firmware Setup\" {\n"
"  fwsetup\n"
"}</literal>\n"
"<userinput>EOF</userinput>"
msgstr ""
"<userinput>cat &gt; /boot/grub/grub.cfg &lt;&lt; EOF</userinput>\n"
"<literal># Begin /boot/grub/grub.cfg\n"
"set default=0\n"
"set timeout=5\n"
"\n"
"insmod part_gpt\n"
"insmod ext2\n"
"set root=(hd0,2)\n"
"\n"
"if loadfont /boot/grub/fonts/unicode.pf2; then\n"
"  set gfxmode=auto\n"
"  insmod all_video\n"
"  terminal_output gfxterm\n"
"fi\n"
"\n"
"menuentry \"GNU/Linux, Linux 5.19.2-lfs-11.2\"  {\n"
"  linux   /boot/vmlinuz-5.19.2-lfs-11.2 root=/dev/sda2 ro\n"
"}\n"
"\n"
"menuentry \"Firmware Setup\" {\n"
"  fwsetup\n"
"}</literal>\n"
"<userinput>EOF</userinput>"

#. type: Content of: <sect1><sect2><para>
