"cd        build &amp;&amp;\n"
"\n"
"../configure --prefix=/usr               \\\n"
"             --sysconfdir=/etc           \\\n"
"             --localstatedir=/var        \\\n"
"             --target-list=$QEMU_ARCH    \\\n"
"             --audio-drv-list=alsa       \\\n"
"             --disable-pa                \\\n"
