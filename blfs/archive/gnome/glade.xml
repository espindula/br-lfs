  <sect2 role="content">
    <title>Contenu</title>
    <segmentedlist>
      <segtitle>Programmes installés</segtitle>
      <segtitle>Bibliothèque installée</segtitle>
      <segtitle>Répertoires installés</segtitle>
      <seglistitem>
        <seg>
          glade et glade-previewer
        </seg>
        <seg>
          libgladeui-2.so
        </seg>
       <seg>
          /usr/include/libgladeui-2.0,
          /usr/lib/glade,
          /usr/share/glade,
          /usr/share/gnome/help/glade,
          /usr/share/gtk-doc/html/gladeui-2 et
          /usr/share/omf/glade
        </seg>
