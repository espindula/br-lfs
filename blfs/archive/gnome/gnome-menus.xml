  <sect2 role="content">
    <title>Contenu</title>
    <segmentedlist>
      <segtitle>Programme installé Program</segtitle>
      <segtitle>Bibliothèque installée</segtitle>
      <segtitle>Répertoires installés</segtitle>
      <seglistitem>
        <seg>
          gmenu-simple-editor
        </seg>
        <seg>
          libgnome-menu.so
        </seg>
        <seg>
          /etc/xdg/menus,
          /usr/include/gnome-menus-3.0,
          /usr/lib/python&python2-majorver;/site-packages/GMenuSimpleEditor et
          /usr/share/gnome-menus
        </seg>
