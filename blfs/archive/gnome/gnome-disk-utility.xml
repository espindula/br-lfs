<sect1 id="gnome-disk-utility" xreflabel="gnome-disk-utility-&gnome-disk-utility-version;">
  <?dbhtml filename="gnome-disk-utility.html"?>
  <sect1info>
    <othername>$LastChangedBy: krejzi $</othername>
