<sect1 id="epiphany-extensions" xreflabel="Epiphany-Extensions-&epiphany-extensions-version;">
  <?dbhtml filename="epiphany-extensions.html"?>
  <sect1info>
    <othername>$LastChangedBy: krejzi $</othername>
