<sect1 id="nautilus" xreflabel="Nautilus-&nautilus-version;">
  <?dbhtml filename="nautilus.html"?>
  <sect1info>
    <othername>$LastChangedBy: krejzi $</othername>
    <date>$Date: 2013-06-01 14:19:41 +0200 (sam. 01 juin 2013) $</date>
