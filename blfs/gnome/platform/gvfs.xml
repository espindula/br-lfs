<sect1 id="gvfs" xreflabel="gvfs-&gvfs-version;">
  <?dbhtml filename="gvfs.html"?>
  <sect1info>
    <othername>$LastChangedBy&nbsp;: randy $</othername>
    <date>$Date&nbsp;: 2013-02-10 19:12:25 +0100 (Sun, 10 Feb 2013) $</date>
