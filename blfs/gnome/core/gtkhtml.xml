        </seg>
        <seg>
          /usr/include/libgtkhtml-4.0 et
          /usr/share/gtkhtml-4.0
        </seg>
      </seglistitem>
    </segmentedlist>
    <variablelist>
      <bridgehead renderas="sect3">Description courte</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>
      <varlistentry id="gtkhtml-editor-test">
