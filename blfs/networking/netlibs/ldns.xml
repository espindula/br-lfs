<sect1 id="ldns" xreflabel="ldns-&ldns-version;">
  <?dbhtml filename="ldns.html"?>
  <sect1info>
    <othername>$LastChangedBy: igor $</othername>
    <date>$Date: 2013-07-21 19:15:00 +0200 (dim. 21 juil. 2013) $</date>
