        <seg>Aucune</seg>
        <seg>
          <envar>$XORG_PREFIX</envar>/share/pkgconfig et
          <envar>$XORG_PREFIX</envar>/share/util-macros
	</seg>
      </seglistitem>
    </segmentedlist>
  </sect2>
