    </itemizedlist>

    <bridgehead renderas="sect3">xcb-util Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required"><xref linkend="libxcb"/> and
    <xref linkend="gperf"/></para>

