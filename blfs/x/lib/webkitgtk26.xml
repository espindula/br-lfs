      <listitem>
        <para>
          Téléchargement (HTTP) : <ulink url="&webkitgtk26-download-http;"/>
        </para>
      </listitem>
      <listitem>
        <para>
          Téléchargement (FTP) : <ulink url="&webkitgtk26-download-ftp;"/>
        </para>
      </listitem>
      <listitem>
