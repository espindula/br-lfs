      <seglistitem>
        <seg>
          Aucun
        </seg>
        <seg>
          libclutter-gst-3.0.so et /usr/lib/gstreamer-1.0/libgstclutter.so
        </seg>
        <seg>
          /usr/include/clutter-gst-3.0 et
          /usr/share/gtk-doc/html/clutter-gst
        </seg>
      </seglistitem>
    </segmentedlist>
