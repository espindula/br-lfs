          <indexterm zone="webkitgtk libwebkitgtk-1">
            <primary sortas="c-libwebkitgtk-1">libwebkitgtk-1.0.so</primary>
          </indexterm>
        </listitem>
      </varlistentry>
      
      <varlistentry id="libjavascriptcoregtk-3">
