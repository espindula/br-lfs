    <bridgehead renderas="sect3">Dépendances de Parole</bridgehead>

    <bridgehead renderas="sect4">Requises</bridgehead>
    <para role="required">
      <xref linkend="gst10-plugins-base"/>, <xref linkend="gst10-plugins-good"/>
et <xref linkend="libxfce4ui"/>
    </para>

    <bridgehead renderas="sect4">Recommandées</bridgehead>
    <para role="recommended">
