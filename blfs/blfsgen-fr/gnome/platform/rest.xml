    <bridgehead renderas="sect3">Dépendances de rest</bridgehead>

    <bridgehead renderas="sect4">Requises</bridgehead>
    <para role="required">
      <xref linkend="json-glib"/>, <xref linkend="libsoup3"/> et <xref
linkend="make-ca"/>
    </para>

    <bridgehead renderas="sect4">Recommandées</bridgehead>
