        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Dépendances de libnma</bridgehead>

    <bridgehead renderas="sect4">Requises</bridgehead>
    <para role="required">
      <xref linkend="gcr"/>, <xref linkend="gtk3"/>, <xref linkend="iso-codes"/>
et <xref linkend="NetworkManager"/>
    </para>

    <bridgehead renderas="sect4">Recommandées</bridgehead>
    <para role="recommended">
      <xref linkend="gtk4"/> et <xref linkend="vala"/>
