    <para role="required">
      <xref linkend="x-window-system"/>, <xref linkend="ffmpeg"/> et au moins un
parmi&nbsp;: <xref linkend="alsa"/>, <xref linkend='pulseaudio'/> ou <ulink
url="https://jackaudio.org/">JACK</ulink>
    </para>

    <bridgehead renderas="sect4">Recommandées</bridgehead>
    <para role="recommended">
      <xref linkend="libdvdnav"/>
    </para>

