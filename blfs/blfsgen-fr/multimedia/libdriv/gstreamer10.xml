            <primary sortas="b-gst-tester-1.0">gst-tester-1.0</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="gst-typefind-1.0">
        <term><command>gst-typefind-1.0</command></term>
