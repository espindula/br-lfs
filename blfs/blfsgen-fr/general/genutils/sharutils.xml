    <variablelist>
      <bridgehead renderas="sect3">Descriptions courtes</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>

      <varlistentry id="shar">
        <term><command>shar</command></term>
        <listitem>
          <para>
            crée des «&nbsp;archives shell&nbsp;» (ou des fichiers shar) au format texte
et qui peuvent être envoyées par courrier électronique
          </para>
          <indexterm zone="sharutils shar">
            <primary sortas="b-shar">shar</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="unshar">
        <term><command>unshar</command></term>
        <listitem>
          <para>
            déballe un fichier shar
          </para>
          <indexterm zone="sharutils unshar">
            <primary sortas="b-unshar">unshar</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="uudecode">
        <term><command>uudecode</command></term>
        <listitem>
          <para>
            lit un fichier (ou, par défaut, l'entrée standard) et écrit une version
encodée sur la sortie standard. L'encodage n'utilise que des caractères
ASCII imprimables
          </para>
          <indexterm zone="sharutils uudecode">
            <primary sortas="b-uudecode">uudecode</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="uuencode">
        <term><command>uuencode</command></term>
        <listitem>
          <para>
            lit un fichier (ou, par défaut, l'entrée standard) et décode la version
uuencodée sur la sortie standard
          </para>
          <indexterm zone="sharutils uuencode">
            <primary sortas="b-uuencode">uuencode</primary>
          </indexterm>
        </listitem>
      </varlistentry>

    </variablelist>

