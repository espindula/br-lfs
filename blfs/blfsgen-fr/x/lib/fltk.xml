          <indexterm zone="fltk fltk-config">
            <primary sortas="b-fltk-config">fltk-config</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="fluid">
        <term><command>fluid</command></term>
        <listitem>
          <para>
            est une interface interactive de conception pour FLTK
