        <seg>Aucune</seg>
        <seg>
          <envar>$XORG_PREFIX</envar>/share/icons/handhelds,
<envar>$XORG_PREFIX</envar>/share/icons/redglass et
<envar>$XORG_PREFIX</envar>/share/icons/whiteglass
        </seg>
      </seglistitem>
    </segmentedlist>

  </sect2>

