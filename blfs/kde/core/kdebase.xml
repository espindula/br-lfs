    <indexterm zone="kdebase kdm">
      <primary sortas="b-kdm">kdm</primary>
    </indexterm>
  </listitem>
</varlistentry>

<varlistentry id="kfind">
  <term><command>kfind</command></term>
  <listitem>
    <para>est un outil pour trouver des fichiers.</para>
