    <xref linkend="aspell"/>,
    <xref linkend="mitkrb"/> or <xref linkend="heimdal"/>,
    <xref linkend="cyrus-sasl"/>,
    <xref linkend="slang"/>,
    <xref linkend="libidn"/>,
    <xref linkend="db"/> or
