    <variablelist>
      <bridgehead renderas="sect3">Description courte</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>


      <varlistentry id="pwmake">
        <term><command>pwmake</command></term>
        <listitem>
          <para>
            est un outil configurable simple pour la génération de mots de passe aléatoires et relativement
            simplement prononçable.
          </para>
          <indexterm zone="libpwquality pwmake">
            <primary sortas="b-pwmake">pwmake</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="pwscore">
        <term><command>pwscore</command></term>
         <listitem>
          <para>
            est un outil simple pour la vérification de la qualité d'un mot de passe.
          </para>
          <indexterm zone="libpwquality pwscore">
            <primary sortas="b-pwscore">pwscore</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="libpwquality-lib">
        <term><filename class="libraryfile">libpwquality.so</filename></term>
        <listitem>
          <para>
            contient les fonctions de l'APO pour la vérification de la qualité des mots de passe.
          </para>
          <indexterm zone="libpwquality libpwquality-lib">
            <primary sortas="c-libpwquality">libpwquality.so</primary>
          </indexterm>
        </listitem>
      </varlistentry>
      <varlistentry id="pam_pwquality">
        <term><filename class="libraryfile">pam_pwquality.so</filename></term>
        <listitem>
          <para>
            est un module <application>Linux PAM</application> utilisé pour réaliser la vérification
            de la qualité d'un mot de passe.
          </para>
          <indexterm zone="libpwquality pam_pwquality">
            <primary sortas="c-pam_pwquality">pam_pwquality.so</primary>
         </indexterm>
        </listitem>
      </varlistentry>



    </variablelist>

