    <bridgehead renderas="sect3">Dépendances de xarchiver</bridgehead>

    <bridgehead renderas="sect4">Requises</bridgehead>
    <para role="required">
      <xref linkend="gtk2"/> ou
      <xref linkend="gtk3"/>
    </para>

    <bridgehead renderas="sect4">Facultatif (Exécution)</bridgehead>
