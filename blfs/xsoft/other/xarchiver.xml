      <xref linkend="cpio"/>,
      <xref linkend="lzo"/>,
      <xref linkend="p7zip"/>,
      <xref linkend="unrar"/>,
      <xref linkend="unzip"/>, et
      <xref linkend="zip"/>
    </para>

