    <variablelist>
      <bridgehead renderas="sect3">Descriptions courtes</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>
      <varlistentry id="gnumeric-prog">
        <term><command>gnumeric</command></term>
        <listitem>
          <para>est un lien symbolique vers
          <command>gnumeric-&gnumeric-version;</command></para>
          <indexterm zone="gnumeric gnumeric-prog">
            <primary sortas="b-gnumeric">gnumeric</primary>
          </indexterm>
        </listitem>
      </varlistentry>
      <varlistentry id="gnumeric-1">
        <term><command>gnumeric-&gnumeric-version;</command></term>
        <listitem>
          <para>est l'application tableur de <application>GNOME</application>.</para>
          <indexterm zone="gnumeric gnumeric-1">
            <primary sortas="b-gnumeric-&gnumeric-version;">gnumeric-&gnumeric-version;</primary>
          </indexterm>
        </listitem>
      </varlistentry>
      <varlistentry id="ssconvert">
        <term><command>ssconvert</command></term>
        <listitem>
          <para>est un outil en ligne de commande utilisé pour convertir des
          fichiers de feuilles de calcul vers différents formats de fichiers
          de feuilles de calcul.</para>
          <indexterm zone="gnumeric ssconvert">
            <primary sortas="b-ssconvert">ssconvert</primary>
          </indexterm>
        </listitem>
      </varlistentry>
     <varlistentry id="ssdiff">
        <term><command>ssdiff</command></term>
        <listitem>
          <para>
            est un outil en ligne de commande pour comparer deux feuilles de calcul
	  </para>
          <indexterm zone="gnumeric ssdiff">
            <primary sortas="b-ssdiff">ssdiff</primary>
          </indexterm>
        </listitem>
	</varlistentry>
	<varlistentry id="ssgrep">
        <term><command>ssgrep</command></term>
        <listitem>
          <para>est un utilitaire en ligne de commande pour rechercher des feuilles de calcul pour les chaînes.</para>
          <indexterm zone="gnumeric ssgrep">
            <primary sortas="b-ssgrep">ssindex</primary>
          </indexterm>
        </listitem>
      </varlistentry>
	  
      <varlistentry id="ssindex">
        <term><command>ssindex</command></term>
        <listitem>
          <para>est un outil en ligne de commande pour générer des données 
          d'index pour des fichiers de feuille de calcul.</para>
          <indexterm zone="gnumeric ssindex">
            <primary sortas="b-ssindex">ssindex</primary>
          </indexterm>
        </listitem>
      </varlistentry>
    </variablelist>
