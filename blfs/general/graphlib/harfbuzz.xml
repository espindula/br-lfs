<sect1 id="harfbuzz" xreflabel="Harfbuzz-&harfbuzz-version;">
  <?dbhtml filename="harfbuzz.html"?>
  <sect1info>
    <othername>$LastChangedBy&nbsp;: krejzi $</othername>
