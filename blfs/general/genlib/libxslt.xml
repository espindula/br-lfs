<sect1 id="libxslt" xreflabel="libxslt-&libxslt-version;">
  <?dbhtml filename="libxslt.html"?>
  <sect1info>
    <othername>$LastChangedBy : bdubbs $</othername>
    <date>$Date : 2013-03-04 21:19:24 +0100 (Mon, 04 Mar 2013) $</date>
