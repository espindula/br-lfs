  <sect2 role="content">
    <title>Contenu</title>

    <segmentedlist>
      <segtitle>Programmes installés</segtitle>
      <segtitle>Bibliothèque installée</segtitle>
      <segtitle>Répertoires installés</segtitle>

      <seglistitem>
        <seg>asn1Coding, asn1Decoding, et asn1Parser</seg>
        <seg>libtasn1.{so,a}</seg>
        <seg>/usr/share/doc/libtasn1-&libtasn1-version; et
