    <variablelist>
      <bridgehead renderas="sect3">Descriptions courtes</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>

      <varlistentry id="asn1Coding">
        <term><command>asn1Coding</command></term>
        <listitem>
          <para>est un encodeur ASN.1 DER.</para>
          <indexterm zone="libtasn1 asn1Coding">
            <primary sortas="b-asn1Coding">asn1Coding</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="asn1Decoding">
        <term><command>asn1Decoding</command></term>
        <listitem>
          <para>est un décodeur ASN.1 DER.</para>
          <indexterm zone="libtasn1 asn1Decoding">
            <primary sortas="b-asn1Decoding">asn1Decoding</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="asn1Parser">
        <term><command>asn1Parser</command></term>
        <listitem>
          <para>est un générateur d'arborescence de syntaxe ASN.1 pour
          <application>libtasn1</application>.</para>
          <indexterm zone="libtasn1 asn1Parser">
            <primary sortas="b-asn1Parser">asn1Parser</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="libtasn1-lib">
        <term><filename class='libraryfile'>libtasn1.{so,a}</filename></term>
        <listitem>
          <para>est une bibliothèque pour <foreignphrase>Abstract Syntax Notation
          One</foreignphrase> (notation Un de syntaxe abstraite) (ASN.1) et la
           manipulation <foreignphrase>Distinguish Encoding Rules</foreignphrase> 
           (règles d'encodage distinguées) (DER).</para>
          <indexterm zone="libtasn1 libtasn1-lib">
            <primary sortas="c-libtasn1">libtasn1.{so,a}</primary>
          </indexterm>
        </listitem>
      </varlistentry>

    </variablelist>

  </sect2>

