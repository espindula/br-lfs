  <sect2 role="content">
    <title>Contenu</title>
    <segmentedlist>
      <segtitle>Programmes installés</segtitle>
      <segtitle>Bibliothèque installée</segtitle>
      <segtitle>Répertoire installé</segtitle>
      <seglistitem>
        <seg>
          asn1Coding, asn1Decoding et asn1Parser
        </seg>
        <seg>
          libtasn1.so
        </seg>
        <seg>
          /usr/share/gtk-doc/html/libtasn1
