      <seglistitem>
        <seg>Aucun</seg>
        <seg>libdrm.so, libdrm_intel.so et libdrm_radeon.so</seg>
        <seg><envar>$XORG_PREFIX</envar>/include/drm</seg>
      </seglistitem>
    </segmentedlist>

