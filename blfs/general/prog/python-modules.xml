      <itemizedlist spacing="compact">
       <listitem>
          <para>Téléchargement (HTTP)&nbsp;: <ulink url="&pygobject2-download-http;"/></para>
        </listitem>
        <listitem>
          <para>Téléchargement (FTP)&nbsp;: <ulink url="&pygobject2-download-ftp;"/></para>
        </listitem>
        <listitem>
          <para>Somme de contrôle MD5 du téléchargement&nbsp;: &pygobject2-md5sum;</para>
        </listitem>
        <listitem>
          <para>Taille du téléchargement&nbsp;: &pygobject2-size;</para>
        </listitem>
        <listitem>
          <para>Estimation de l'espace disque requis&nbsp;: &pygobject2-buildsize;</para>
        </listitem>
        <listitem>
          <para>Estimation du temps de construction&nbsp;: &pygobject2-time;</para>
        </listitem>
      </itemizedlist>
      
    <bridgehead renderas="sect3">Téléchargements supplémentaires</bridgehead>
