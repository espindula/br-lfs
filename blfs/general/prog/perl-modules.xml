      <listitem>
        <para><ulink
        url="http://search.cpan.org/CPAN/authors/id/T/TO/TODDR/XML-Parser-&XML-Parser-version;.tar.gz">
        XML::Simple-&XML-Simple-version;</ulink> (MD5 sum: 4d10964e123b76eca36678464daa63cd)
        </para>
        <itemizedlist>
          <listitem>
            <para><xref linkend="expat"/></para>
          </listitem>
          <listitem>
            <para><xref linkend="perl-lwp"/>
            (facultatif, utilisé lors des tests)</para>
          </listitem>
        </itemizedlist>
